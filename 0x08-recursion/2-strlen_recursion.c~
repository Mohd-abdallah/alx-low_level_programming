#include <stdio.h>
#include "main.h"
#include <string.h>

/**
 * _strlen_recursion - a function that returns the length of a string.
 * @s: input
 * Return: 0
 */
int _strlen_recursion(char *s)
{
	int i;

	if (strlen(*s) == 0)
	{
		return (0);
	}
	else
	{
		i += _strlen_recursion(s + 1);
	}
	return (i);
}
